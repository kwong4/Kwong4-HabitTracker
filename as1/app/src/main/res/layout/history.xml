<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/History"
        android:id="@+id/History_title"
        android:layout_marginStart="22dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/History_list_view"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/History_title"
        android:layout_below="@+id/History_title" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/count_toggle"
        android:id="@+id/count_switch"
        android:checked="false"
        android:layout_marginEnd="29dp"
        android:layout_above="@+id/History_list_view"
        android:layout_alignParentEnd="true"
        android:onClick="count_toggle" />

</RelativeLayout>
